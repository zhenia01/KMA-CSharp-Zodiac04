@model IndexModel

<div class="modal fade" id="editPersonModal" tabindex="-1" role="dialog" aria-labelledby="editPersonModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editPersonModalLabel">Edit Person's info</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        @if (!Model.ModelState.IsValid)
        {
          <div class="text-center">
            @if (Model.ModelState.ContainsKey("Invalid birth date format"))
            {
              <p class="alert alert-warning">Error! Type date in "DD-MM-YYYY" format</p>
            }
            @if (Model.ModelState.ContainsKey("Early birth date") || Model.ModelState.ContainsKey("Future birth date"))
            {
              <p class="alert alert-warning">Error! Type real date</p>
            }
            @if (Model.ModelState.ContainsKey("Email"))
            {
              <p class="alert alert-warning">Error! Invalid email format</p>
            }
          </div>
        }
        else
        {
          if (Model.EditModel.Tried)
          {
            <div class="text-center">
              <p class="alert alert-info">Your birth date: @Model.EditModel.BirthDate</p>
              <p class="alert alert-info">@(Model.EditModel.IsAdult ? "You are an adult" : "You are not an adult")</p>
              @if (Model.EditModel.IsBornToday)
              {
                <p class="alert alert-success">Happy Birthday!!! 🎁🎉</p>
              }
              <p class="alert alert-info">Your first name: @Model.EditModel.FirstName</p>
              <p class="alert alert-info">Your last name: @Model.EditModel.LastName</p>
              <p class="alert alert-info">Your email: @Model.EditModel.Email</p>
              <p class="alert alert-info">Your chinese sign: @Model.EditModel.ChineseZodiacSign.name @Model.EditModel.ChineseZodiacSign.emoji</p>
              <p class="alert alert-info">Your western sign: @Model.EditModel.WesternZodiacSign.name @Model.EditModel.WesternZodiacSign.emoji</p>
            </div>
          }
        }
        <div class="form-group mb-4">
          <form asp-antiforgery="true" id="birthDateForm" method="post" asp-page-handler="EditPerson">
            <div class="form-group">
              <label asp-for="@Model.EditModel.BirthDate">Birth Date</label>
              <input @*asp-for="@Model.EditModel.BirthDate"*@ name="birthDate" placeholder="dd-mm-yyyy" class="datepicker date form-control py-4 px-4" required>
            </div>
            <div class="form-group">
              <label asp-for="@Model.EditModel.FirstName">First Name</label>
              <input asp-for="@Model.EditModel.FirstName" placeholder="First name" class="form-control py-4 px-4 mb-2" required>
            </div>
            <div class="form-group">
              <label asp-for="@Model.EditModel.LastName">Last Name</label>
              <input asp-for="@Model.EditModel.LastName" placeholder="Last Name" class="form-control py-4 px-4 mb-2" required>
            </div>
            <div class="form-group">
              <label asp-for="@Model.EditModel.Email">Email address</label>
              <input @*asp-for="@Model.EditModel.Email"*@ name="email"  placeholder="abc@@company.com" class="form-control py-4 px-4 mb-2" required>
            </div>
          </form>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="personSave" class="btn btn-primary" type="submit" form="birthDateForm">Save changes</button>
      </div>
    </div>
  </div>
</div>